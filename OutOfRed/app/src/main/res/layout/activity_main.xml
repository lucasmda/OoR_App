<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="outofred.com.br.outofred.LoginActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deal"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_margin="30dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_cpf_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPF: "
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/main_cpf_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="765.345.357-74"
            android:layout_toRightOf="@+id/main_cpf_text"
            />

        <TextView
            android:id="@+id/main_bday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nascimento: "
            android:layout_toRightOf="@+id/main_cpf_number"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/main_bday_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03/06/1987"
            android:layout_toRightOf="@+id/main_bday_text"
            />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de vencimento da dívida"
        android:layout_margin="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor da dívida"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/login_button_entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simular"
        android:layout_margin="20dp"
        android:background="@color/darkGreen"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

</LinearLayout>
